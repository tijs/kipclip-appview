{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/348900b8b79f4a434cab4c74b3bc8d4d2fa8ee74/cli/schemas/config-file.v1.json",
  "lock": false,
  "imports": {
    "fresh": "jsr:@fresh/core@^2.2.0"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": false,
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react",
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-import-prefix"
      ]
    }
  },
  "include": [
    "backend/",
    "frontend/",
    "shared/"
  ],
  "node_modules_dir": false,
  "experimental": {
    "unstable-node-globals": true,
    "unstable-temporal": true,
    "unstable-worker-options": true,
    "unstable-sloppy-imports": true
  },
  "tasks": {
    "dev": "deno run --allow-all --watch backend/dev.ts",
    "build": "echo 'No build step required - TypeScript transpiled at runtime'",
    "quality": "deno fmt && deno lint",
    "deploy": "deno task quality",
    "check": "deno check --allow-import backend/index.ts frontend/index.tsx",
    "test": "BASE_URL=http://localhost:8000 COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all",
    "test:watch": "BASE_URL=http://localhost:8000 COOKIE_SECRET=test-cookie-secret-32-characters-minimum deno test --allow-all --watch",
    "fmt": "deno fmt",
    "lint": "deno lint"
  }
}
